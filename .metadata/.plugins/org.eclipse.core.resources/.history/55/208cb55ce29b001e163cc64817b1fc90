package ece.btech2;

import java.util.Scanner;
public class Program6 {
	public static int i;
	public static void main(String[]args) {
		number(5);
		value(10938);
	}
	public static void number( int number) {
		System.out.println("list of even numbers from 1 to "+number+":");
		for(int i=1; i<=number;i++) {
			if(i%2==0) {
				System.out.println(i+" The number is even");
			}else {
				System.out.println(i+" The number is odd");
			}
		}
	}
	public static void value(int i) {
			System.out.println("Enter the number");
			Scanner scan=new Scanner(System.in);
			int num=scan.nextInt();
			if(i%2==0) {
				System.out.println(i+" number is even");
			}else {
				System.out.println(i+" number is odd");
			}
		}
	
}
